<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cancion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp"
    app:cardBackgroundColor="@color/fondoOscuro"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageSongView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:scaleType="centerCrop"
            tools:src="@color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp">
            <TextView
                android:id="@+id/songTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    android:background="#8F8E8E"
                    android:scaleType="fitCenter"
                    android:src="@drawable/baseline_all_inclusive_24" />


                <TextView
                    android:id="@+id/artistTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3dp"
                    android:text="Artist"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/darMegusta"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="like"
                android:src="@drawable/baseline_favorite_border_24"
                tools:ignore="TouchTargetSizeCheck"
                android:background="@null"
                android:layout_marginHorizontal="4dp"/>

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="dislike"
                android:src="@drawable/baseline_remove_circle_outline_24"
                tools:ignore="TouchTargetSizeCheck"
                android:background="@null"
                android:layout_marginHorizontal="4dp"/>

            <ImageButton
                android:id="@+id/enlace"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="Opciones"
                android:src="@drawable/baseline_more_vert_24"
                tools:ignore="TouchTargetSizeCheck"
                android:background="@null"
                android:layout_marginHorizontal="2dp"/>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>